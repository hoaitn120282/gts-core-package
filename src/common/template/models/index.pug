export default (sequelize, DataTypes) => {
    const {{modelName}} = sequelize.define(
        "{{modelName}}",
        {
            id: {
                allowNull: false,
                autoIncrement: true,
                primaryKey: true,
                type: DataTypes.INTEGER
            },
        },
        {
            timestamps: {{timestamps}},
            paranoid: {{paranoid}},
            underscored: false,
            tableName: "{{tableName}}",
        }
    );

    {{modelName}}.associate = function (models) {
        models.{{modelName}}.{{relationType}}(models.{{relationModel}}, { foreignKey: "{{foreignKey}}", as: "{{aliasName}}" });
    };

    return {{modelName}};
};